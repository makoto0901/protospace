- if @comments.present?
  .comment
    %h4.comments_count.num Comments(0)
    .col-md-8
      - @comments.each do |comment|
        #comments
          .media
            .media-left
              %img.media-object{src: comment.user.avatar, style: "width: 64px; height: 64px"}
            .media-body
              %h4#top-aligned-media.media-heading
                =  comment.user.name
                -if user_signed_in? && current_user.id == comment.user.id
                  .btn.btn-default.delete_btn
                    Delete
                  .btn.btn-default.edit_btn
                    edit
                  / = f.submit "Update", class: "btn btn-default submit_btn"
              %p= comment.content

